<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="match_parent"
    android:background="#7E777777"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingEnd="10dp"
    android:paddingBottom="20dp">


    <ImageButton
        android:id="@+id/add_layer_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add_layer"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/layers_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"/>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageButton
            android:id="@+id/move_layer_up_button"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:background="@drawable/layer_up"
            android:scaleType="fitCenter" />

        <View
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <ImageButton
            android:id="@+id/move_layer_down_button"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:background="@drawable/layer_down"
            android:scaleType="fitCenter" />


        <View
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageButton
            android:id="@+id/delete_layer_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/delete"
            android:scaleType="fitCenter" />

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"></View>

        <ImageButton
            android:id="@+id/is_visible_button"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/invisible_layer"
            android:scaleType="fitCenter" />
    </LinearLayout>


</LinearLayout>