<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF444444"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.cvut.arfittingroom.draw.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />


    <!-- Top UI Layout -->
    <LinearLayout
        android:id="@+id/top_ui"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorBlack"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_undo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/undo" />

            <ImageButton
                android:id="@+id/button_redo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/redo" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/button_layers"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/layers" />

        <Button
            android:id="@+id/button_clear_all"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:text="@string/clear_all"
            android:textAllCaps="false" />
    </LinearLayout>


    <!-- Bottom UI Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_ui"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/button_color_picker"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/color_picker" />


        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            android:paddingStart="0dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu" />

        <LinearLayout
            android:id="@+id/second_line_buttons"
            android:layout_width="match_parent"
            android:layout_height="30dp"
           android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="co"
                app:srcCompat="@drawable/back" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:backgroundTint="@color/colorDarkGrey">
            <Button
                android:id="@+id/draw_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/colorMediumGrey"
                android:text="@string/draw"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/stamp_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/colorMediumGrey"
                android:text="@string/stamp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/image_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/colorMediumGrey"
                android:text="@string/image"
                android:textAllCaps="false" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/button_ok"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"

                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ok" />
        </LinearLayout>




        <FrameLayout
            android:id="@+id/menu_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/second_line_buttons"
            app:layout_constraintHorizontal_bias="0.5"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_ui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_ui"
        app:layout_constraintVertical_bias="0.0"
     >

        <com.lukelorusso.verticalseekbar.VerticalSeekBar
            android:id="@+id/stroke_size_slider"
            android:layout_gravity="start"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"

            android:stepSize="1"
            android:value="10"
            android:valueFrom="1"
            android:valueTo="250"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"

            app:tickVisible="false"
            app:vsb_bar_corner_radius="10dp"

            app:vsb_bar_progress="@color/colorLightGrey"
            app:vsb_bar_background="@color/colorDarkGrey"
            app:vsb_bar_width="2dp"
            app:vsb_show_thumb="true" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>






